<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      <% @properties.each do |property|%>
        <div class="group relative">
          <div class="swiper" data-controller="swiper">
            <div class="swiper-wrapper">
              <% property.images.each do |image| %>
                <%= image_tag image, class:"swiper-slide h-full w-full object-cover object-center lg:h-full lg:w-full rounded-lg" %>
              <% end %>
            </div>
            
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="font-medium text-black">
                <a href="#">
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  <%= property.city %>, <%= property.country %>
                </a>
              </h3>
              <p class="mt-1 text-sm text-gray-500">Hosted By Ali Haidar</p>
              <p class="mt-1 text-sm text-gray-500">Jan 5â€”10</p>
              <p class="mt-1 font-medium text-black">
                <span><%= humanized_money_with_symbol(property.price_cents)%></span> night
                </p>
            </div>
            <p class="font-medium text-black"> &#9733; 4.8</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>